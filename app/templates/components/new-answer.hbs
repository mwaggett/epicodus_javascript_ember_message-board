{{#if newAnswer}}
  <h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="answer">Please enter your answer:</label>
        {{input value=answer id="answer"}}
      </div>

      <div class="form-group">
        <label for="author">Who are you?</label>
        {{input value=author id="author"}}
      </div>

      <button {{action 'saveAnswer'}}>Answer</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info" {{action 'showAnswerForm'}}>Answer this question</button>
{{/if}}
