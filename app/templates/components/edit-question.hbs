{{#if editQuestion}}
  <h1>Edit Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="question">Please enter your question:</label>
        {{input value=question id="question" placeholder=model.question}}
      </div>

      <div class="form-group">
        <label for="author">Who are you?</label>
        {{input value=author id="author" placeholder=model.author}}
      </div>

      <div class="form-group">
        <label for="additional-notes">Additional Notes:</label>
        {{input value=additional-notes id="additional-notes" placeholder=model.additional_notes}}
      </div>

      <button class="btn btn-warning" {{action 'updateQuestion' model}}>Update</button>
    </form>
  </div>
{{else}}
  <h2>{{model.question}}</h2>
  <p>asked by {{model.author}}</p>
  <p><b>Additional Notes:</b> {{model.additional_notes}}</p>
  <button class="btn btn-info" {{action 'showEditQuestionForm'}}>Edit</button>
{{/if}}
